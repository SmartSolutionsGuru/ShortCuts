                        cal:Message.Attach="Submit()"
                        Height="45" 
                        Width="200" 
                        Background="{StaticResource GreenColorBrush}"
                        Content="OK"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
